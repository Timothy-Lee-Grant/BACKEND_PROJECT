<body>
    <!-- <button id="login_button">Click Here</button> -->
    <form action="http://localhost:3000/login_no_authentication" method="POST" class="form-container">
        <div class="login-input-elements">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" placeholder="Username" required>

        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Password" required>
        </div>
        <div class="login-button"></div>
        <button type="submit" id="login-button">Log In</button>
    </form>

    <script>
        document.addEventListener('DOMContentLoaded', function(){
            const button = document.getElementById('login_button');
            button.addEventListener('click', async function(){
                //alert('Button was clicked');
                try {
                    await axios.post('http://localhost:3000/login_no_authentication', {
                    id: 444,
                    username: 'timothy'
                    });
                    alert('Login request sent!');
                } catch (err) {
                    console.error('Login failed:', err);
                }
            });
        });
    </script>
    <!-- Axios must be loaded before your script uses it -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</body>
